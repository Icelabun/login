doctype html
html
  head
    title Protected Page
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script(src="https://cdn.tailwindcss.com")
    style.
      body {
        background-color: #f8f9fa; /* Light gray background */
      }
      .custom-card {
        background-color: #e3f2fd; /* Light blue card */
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      }
  body
    .container.d-flex.justify-content-center.align-items-center.min-vh-100
      .card.custom-card.p-4(style="width: 400px")
        .card-body
          h3.text-center.text-primary.mb-3 Welcome, #{username}!
          p.text-center Your protected content goes here.
          a.btn.btn-primary.w-100(href="/logout") Logout
