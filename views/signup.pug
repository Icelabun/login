doctype html
html
  head
    title Sign Up
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script(src="https://cdn.tailwindcss.com")
    style.
      body {
        background-color: #f8f9fa; /* Light gray background */
      }
      .custom-card {
        background-color: #e3f2fd; /* Light blue card */
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      }
  body
    .container.d-flex.justify-content-center.align-items-center.min-vh-100
      .card.custom-card.p-4(style="width: 400px")
        .card-body
          h3.text-center.text-primary.mb-3 Sign Up
          if message
            .alert.alert-danger #{message}
          form(action="/signup" method="post")
            .mb-3
              label.form-label.text-dark Username:
              input.form-control(type="text" name="username" required)
            .mb-3
              label.form-label.text-dark Email:
              input.form-control(type="email" name="email" required)
            .mb-3
              label.form-label.text-dark Password:
              input.form-control(type="password" name="password" required)
            button.btn.btn-primary.w-100(type="submit") Sign Up
          p.text-center.mt-3.text-dark Already registered? 
            a.text-decoration-none.text-primary.fw-bold(href="/login") Login here
